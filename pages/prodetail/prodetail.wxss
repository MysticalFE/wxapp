.productDesc{
    padding-bottom:5px;
    border-bottom:1px solid #eee;
}
.productDesc text{
    display:block;
    margin-left:10px;
}
.prodetailBottom{
    position: fixed;
    bottom: 0;
    left: 0;
    text-align: center;
    width: 100%;
    height: 50px;
    border-top: 1px solid #e3e5e9;
    display: flex;
}
.cartIcon{
    width:50%;
    display: inline-block;
    border-right:1px solid #eee;
}
.cartIconTop{
    width: 25px;
    height: 24px;
    display: block;
    margin: 0 auto;
    background-color: #000;
    opacity: 0.4;
    margin-top: 8px;
    color:red;
}
.cartIconButtom{
    font-size:14px;
}
.cartButton{
    width:49.9%;
    display: block;
    height: 50px;
    line-height: 50px;
    background-color: #957A43;
    color: #fff;
}
.buyButton{
    background:#957A43;
}
