/*stepper容器*/
.stepper {
    border: 1px solid #ccc;
    border-radius: 3px;
    display: inline-block;
    width: 70px;
    height: 26px;
}


/*加号与减号*/
.munis{
    width: 19px;
    height: 28px;
    line-height: 26px;
    text-align: center;
    float: left;
}


/*数值*/
.stepper input {
    float: left;
    margin: 0 auto;
    width: 30px;
    text-align: center;
    font-size: 12px;
    border-left: 1px solid #ccc;
    border-right: 1px solid #ccc;
}