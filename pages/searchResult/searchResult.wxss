.scrollList{
    height:100%;
}
.shoppingList{
    width:100%;
    height:100%;
    display: -webkit-flex;
    display: flex;
    flex-direction:column;
    -webkit-flex:1;
    flex: 1;
    -ms-flex-wrap: wrap;
    -webkit-flex-wrap:wrap;
    flex-wrap:wrap;
}
.shoppingImg{
    width:328rpx;
    height:328rpx;
}
.shoppingList .shoppingItem{
    display: inline-block;
    background-color:#f8f8f8;
    width:43%;
    height:100%;
    padding:26rpx;
    animation: fadeIn 1.8s;
}
.shoppingItem text{
    display: block;
}
.shoppingDesc{
    color: rgba(34,34,34,0.80);
    font-size: 14px;
    height: 32px;
    line-height: 16px;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
.shoppingPrice{
    color:#f15353;
    font-size: 16px;
    padding-right: 10px;
    height: 20px;
    line-height: 20px;
    vertical-align: text-bottom;
    display: inline-block;
    margin-top: 1px;
}
.btn-load-more{
    width:100%;
    height:60rpx;
    color:#666;
    line-height: 60rpx;
    text-align: center;
    border-top: 1px #f8f8f8 solid;
}