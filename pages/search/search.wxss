.search-area {
    box-sizing: border-box;
    position: relative;
    padding: 20rpx;
    background: rgba(34,34,34,0.8);
}
.search-txt {
    box-sizing: border-box;
    width: 100%;
    height: 80rpx;
    padding-left:20rpx;
    padding-right: 20rpx;
    border-radius: 10rpx;
    border: 1px solid #eee;
    font-family: "微软雅黑";
    background:#fff;
}

.search-btn {
    position: absolute;
    z-index: 11;
    top: 0;
    right: 0;
    height: 80rpx;
    width: 120rpx;
    text-align: center;
    line-height: 80rpx;
    font-size: 28rpx;
    margin-top:20rpx;
    margin-right:20rpx;
    border-bottom-left-radius: 0;
    border-top-left-radius: 0;
}

.search-btn::after{
    border-bottom-left-radius: 0;
    border-top-left-radius: 0;
}
.search-hot{
    padding-top: 7px;
    background: #f8f8f8;
    border-bottom: 1px solid #e0e0e0;
    border-width: 0 0 1px 0;
}
.hot-title{
    font-size: 14px;
    color: #252525;
    margin-top: 5px;
    margin-left: 6px;
}
.hot-keyword-list{
    width: 100%;
    padding-left: 40px;
    background: #f8f8f8;
    display: block;
    font-size: 0;
}
.hot-keyword{
    line-height: 25px;
    height: 25px;
    display: inline-block;
    border-radius: 5px;
    width: 26%;
    background: #fff;
    margin-bottom: 7px;
    margin-right: 7px;
    text-align: center;
    border: 1px solid #e0e0e0;
    text-decoration: none;
}
.hot-keyword text{
    font-size: 12px;
    color: #848689;
    width: 74%;
    display: inline-block;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}
.clearStorage{
    background: #f8f8f8;
    padding: 17px;
    text-align: center;
    color: #353535;
    font-size: 15px;
}
.clearStorage text{
    display: inline-block;
    text-align: center;
    height: 39px;
    line-height: 39px;
    border-radius: 4px;
    border: 1px solid #848689;
    background: #fff;
    width: 249px;
}
